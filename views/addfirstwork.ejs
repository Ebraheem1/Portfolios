<% include partials/header.ejs %>

<div class="container">
		<% if(success_msg!=""){ %>
	            <div class="alert alert-success">
	            	<p><%= success_msg%></p>
	            </div>
          	<% } %>
        <% if(error_msg!=""){ %>
	            <div class="alert alert-danger">
	            	<p><%= error_msg%></p>
	            </div>
    	<% } %>

<form class="form" enctype="multipart/form-data" method="POST" action="/addprofilepicture">
	<div class="form-group row">
      	<label for="smFormGroupInput" class="col-sm-2 col-form-label col-form-label-sm">Project as a link</label>
      		<div class="col-sm-10">
        		<input type="text" name="project" class="form-control form-control-sm" id="smFormGroupInput" placeholder="https://www.google.com.eg/">
      		</div>
    </div>
    
    <div class="form-group">
    	<label> Project as screenshot </label>
    		<input type="file" name="userPhoto">
    </div>
    
    <button type="submit" class="btn btn-primary">Done</button>
</form>






