<% include partials/header.ejs %>

<div class="container">
<% if(errors || message){ %>
		<div class="alert alert-danger" role="alert">
			<% if(errors){ %>
				<ul>
				<% errors.forEach(function(error){ %>
					<li><%= error.msg %></li>
				<% }) %>
				</ul>
			<% } %>
			<% if(message){ %>
			<p><%= message%></p>
			<% } %>
			</div>
		<% } %>	
		<!-- Profile Picture Upload -->
  <form class="form" enctype="multipart/form-data" method="POST" action="/project">
  <div class="form-group">
    	<label> Put Your Profile Picture(Optional) </label>
    		<input type="file" name="userPhoto">
    </div>
    
   
    <div class="form-group row">
      <label for="lgFormGroupInput" class="col-sm-2 col-form-label col-form-label-lg">Name</label>
      <div class="col-sm-10">
        <input type="text" name="name" class="form-control form-control-lg" id="lgFormGroupInput" placeholder="Lionel Messi">
      </div>
    </div>

    <button type="submit" class="btn btn-primary">Add Work</button>
    </form>
    
    




